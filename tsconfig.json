{
  "exclude": [
    "node_modules/"
  ],
  "include": [
    "lib/",
    "test"
  ],
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "es2016",
      "es2017.object",
      "es2018"
    ],
    "rootDir": ".",
    "outDir": "dist/",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "pretty": true,
    "allowUnreachableCode": false,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node"
    ],
  }
}